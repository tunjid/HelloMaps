<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    android:id="@+id/card_view"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:layout_marginBottom="@dimen/eigth_margin"
    android:layout_marginLeft="@dimen/quarter_margin"
    android:layout_marginRight="@dimen/quarter_margin"
    android:layout_marginTop="@dimen/eigth_margin"
    card_view:cardCornerRadius="@dimen/quarter_margin">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/office_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/half_margin"
            android:layout_marginTop="@dimen/half_margin"
            android:text="@string/hello_world"
            android:textColor="@color/hello_grey"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/office_address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/office_name"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/half_margin"
            android:layout_marginTop="@dimen/half_margin"
            android:drawablePadding="@dimen/quarter_margin"
            android:textColor="@color/hello_grey"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/distance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/office_address"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/half_margin"
            android:layout_marginTop="@dimen/half_margin"
            android:textColor="@color/hello_grey"
            android:textSize="14sp"
            android:textStyle="italic" />
    </RelativeLayout>
</android.support.v7.widget.CardView>
